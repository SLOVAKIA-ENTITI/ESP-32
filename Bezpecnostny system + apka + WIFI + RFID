#include <MFRC522v2.h>
#include <MFRC522DriverSPI.h>
#include <MFRC522DriverPinSimple.h>
#include <MFRC522Debug.h>
#include <LiquidCrystal_I2C.h>
#include <Wire.h>
#include <WiFi.h>

static const uint8_t MFRC522_SS_PIN  = 5;
static const uint8_t MFRC522_RST_PIN = 26;

MFRC522DriverPinSimple ss_pin(MFRC522_SS_PIN);
MFRC522DriverSPI driver(ss_pin);
MFRC522 mfrc522(driver);

LiquidCrystal_I2C lcd(0x27, 16, 2);

WiFiServer server(80);
String header;

String stavBrany = "zatvorena";      // stav brány: "zatvorena" alebo "otvorena"
String stavButtonu = "zamietnuta";   // stav tlačidla: "pristupna" alebo "zamietnuta"

unsigned long currentTime = millis();
unsigned long previousTime = 0;
const long timeoutTime = 2000;

unsigned long buttonTimer = 0;       // čas posledného skenu
const unsigned long resetTime = 5000; // reset po 5 sekundách

void setup() {
  Serial.begin(9600);
  delay(200);

  // LCD
  Wire.begin(21, 22);
  lcd.init();
  lcd.backlight();
  lcd.clear();
  lcd.print("Inicializujem...");
  delay(500);

  // RFID
  mfrc522.PCD_Init();
  MFRC522Debug::PCD_DumpVersionToSerial(mfrc522, Serial);

  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("    WELCOME!  ");  
  lcd.setCursor(0,1);
  lcd.print("SCAN ACCESS CARD");

  // WiFi
  WiFi.begin("soc2019", "socka2019");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWiFi pripojena!");
  Serial.print("IP adresa: ");
  Serial.println(WiFi.localIP());

  server.begin();
}

void loop() {
  handleRFID();
  handleWiFi();
  handleReset(); // kontrola, či neuplynulo 5 sekúnd
}

// -----------------------------
void handleRFID() {
  if (!mfrc522.PICC_IsNewCardPresent()) return;
  if (!mfrc522.PICC_ReadCardSerial()) return;

  lcd.clear();
  lcd.setCursor(0, 0);

  String uidString = "";
  for (byte i = 0; i < mfrc522.uid.size; i++) {
    if (mfrc522.uid.uidByte[i] < 0x10) uidString += "0";
    uidString += String(mfrc522.uid.uidByte[i], HEX);
  }
  uidString.toLowerCase();

  Serial.print("UID: ");
  Serial.println(uidString);
  lcd.print("UID: ");
  lcd.print(uidString);

  lcd.setCursor(0,1);
  if (uidString == "130492a5") {
    lcd.print(" ACCESS GRANTED ");
    Serial.println("Pristup povoleny");
    stavButtonu = "pristupna";  // zelené tlačidlo
  } 
  else {
    lcd.print(" ACCESS DENIED ");
    Serial.println("Pristup zamietnuty");
    stavButtonu = "zamietnuta"; // červené tlačidlo
  }

  buttonTimer = millis(); // uloženie času skenu

  delay(1500);

  mfrc522.PICC_HaltA();
  mfrc522.PCD_StopCrypto1();

  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("    WELCOME!  ");  
  lcd.setCursor(0,1);
  lcd.print("SCAN ACCESS CARD");
}

// -----------------------------
void handleWiFi() {
  WiFiClient client = server.available();
  if (client) {
    currentTime = millis();
    previousTime = currentTime;
    Serial.println("Novy klient");
    String currentLine = "";

    while (client.connected() && currentTime - previousTime <= timeoutTime) {
      currentTime = millis();
      if (client.available()) {
        char c = client.read();
        Serial.write(c);
        header += c;

        if (c == '\n') {
          if (currentLine.length() == 0) {
            client.println("HTTP/1.1 200 OK");
            client.println("Content-type:text/html");
            client.println("Connection: close");
            client.println("");

            // Kliknutie na tlačidlo
            if (header.indexOf("GET /otvoreny") >= 0 && stavButtonu == "pristupna") {
              stavBrany = "aktivovany";  // brána sa otvorí iba ak je tlačidlo prístupné
              Serial.println("Brana otvorena cez web");
            } 
            else if (header.indexOf("GET /zatvoreny") >= 0) {
              stavBrany = "deaktivovany"; // zatvorenie brany
              Serial.println("Brana zatvorena cez web");
            }

            client.println("<!DOCTYPE html><html><head>");
            client.println("<style>");
            client.println(".button { padding: 24px 48px; font-size: 18px; border: none; cursor: pointer; }");
            client.println(".green { background-color: #28a745; color: white; }");
            client.println(".red { background-color: #dc3545; color: white; cursor: not-allowed; }");
            client.println("</style></head><body>");

            client.println("<meta http-equiv=\"refresh\" content=\"2\">");

            client.println("<div align='center'>");
            client.println("<h1>Ovladanie bezpecnostneho systemu</h1><br>");
            client.println("<p>STAV SYSTEMU: <b>" + stavBrany + "<b></p>");

            if (stavButtonu == "pristupna" && stavBrany == "deaktivovany")
            client.println("<p><a href=\"/otvoreny\"><button class=\"button green\">AKTIVOVAT</button></a></p>");
          else if (stavButtonu == "pristupna" && stavBrany == "aktivovany")
            client.println("<p><a href=\"/zatvoreny\"><button class=\"button green\">DEAKTIVOVAT</button></a></p>");
          else if(stavBrany == "deaktivovany")
            client.println("<p><button class=\"button red\" disabled>AKTIVOVAT</button></p>");
          else
            client.println("<p><button class=\"button red\" disabled>DEAKTIVOVAT</button></p>");

          // Pridanie tlačidla na manuálne obnovenie, ak chceš
          client.println("<p><button onclick=\"location.reload();\" class=\"button\">OBNOVIT</button></p>");

          client.println("</div></body></html>");
                      client.println("</div></body></html>");
                      client.println("");
                      break;
          } else {
            currentLine = "";
          }
        } else if (c != '\r') {
          currentLine += c;
        }
      }
    }

    header = "";
    client.stop();
    Serial.println("Klient je odpojeny.\n");
  }
}

// -----------------------------
// Reset stavov po 5 sekundách (iba tlačidlo)
void handleReset() {
  if (millis() - buttonTimer >= resetTime && buttonTimer != 0) {
    stavButtonu = "zamietnuta"; // tlačidlo deaktivované
    buttonTimer = 0;             // reset timer
    Serial.println("Tlačidlo resetovane po 5 sekundach");
  }
}
