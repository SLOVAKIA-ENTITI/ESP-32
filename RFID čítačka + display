#include <MFRC522v2.h>
#include <MFRC522DriverSPI.h>
#include <MFRC522DriverPinSimple.h>
#include <MFRC522Debug.h>
#include <LiquidCrystal_I2C.h>
#include <Wire.h>

// -----------------------------
// PINOUT podľa teba
// -----------------------------
static const uint8_t MFRC522_SS_PIN  = 5;    // SDA/SS
static const uint8_t MFRC522_RST_PIN = 26;   // RST (pripojené fyzicky, nie v kóde)

// SPI driver pre MFRC522
MFRC522DriverPinSimple ss_pin(MFRC522_SS_PIN);
MFRC522DriverSPI driver(ss_pin);
MFRC522 mfrc522(driver);  // len driver

// LCD (SDA=21, SCL=22)
LiquidCrystal_I2C lcd(0x27, 16, 2);

void setup() {
  Serial.begin(9600);
  delay(200);

  // I2C LCD
  Wire.begin(21, 22);
  lcd.init();
  lcd.backlight();
  lcd.clear();
  lcd.print("Inicializujem...");
  delay(500);

  // RFID
  mfrc522.PCD_Init();
  MFRC522Debug::PCD_DumpVersionToSerial(mfrc522, Serial);

  lcd.clear();
  lcd.print("Priloz kartu");
}

void loop() {

  if (!mfrc522.PICC_IsNewCardPresent()) return;
  if (!mfrc522.PICC_ReadCardSerial()) return;

  lcd.clear();
  lcd.setCursor(0, 0);

  // Získanie UID
  String uidString = "";
  for (byte i = 0; i < mfrc522.uid.size; i++) {
    if (mfrc522.uid.uidByte[i] < 0x10) uidString += "0";
    uidString += String(mfrc522.uid.uidByte[i], HEX);
  }
  uidString.toLowerCase();

  Serial.print("UID: ");
  Serial.println(uidString);
  lcd.print(uidString);

  // Porovnávanie kariet
  lcd.setCursor(0, 1);
  if (uidString == "130492a5") {
    lcd.print("Pristup povoleny");
    Serial.println("Pristup povoleny");
  } 
  else if (uidString == "03f7f1aa") {
    lcd.print("Zamietnute");
    Serial.println("Karta zamietnuta");
  }
  else {
    lcd.print("Neznama karta");
    Serial.println("Neznama karta");
  }

  delay(1500);

  mfrc522.PICC_HaltA();
  mfrc522.PCD_StopCrypto1();

  lcd.clear();
  lcd.print("Priloz kartu");
}
