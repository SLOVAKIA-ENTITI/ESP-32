#include <MFRC522v2.h>
#include <MFRC522DriverSPI.h>
#include <MFRC522DriverPinSimple.h>
#include <MFRC522Debug.h>

MFRC522DriverPinSimple ss_pin(5);
MFRC522DriverSPI driver{ss_pin}; 
MFRC522 mfrc522{driver};

void setup() {
  Serial.begin(9600);
  while (!Serial);

  mfrc522.PCD_Init();
  MFRC522Debug::PCD_DumpVersionToSerial(mfrc522, Serial);
  Serial.println(F("Scan PICC to see UID"));
}

void loop() {
  if (!mfrc522.PICC_IsNewCardPresent()) {
    return;
  }

  if (!mfrc522.PICC_ReadCardSerial()) {
    return;
  }

  Serial.print("Card UID: ");
  MFRC522Debug::PrintUID(Serial, (mfrc522.uid));
  Serial.println();

  // Konverzia UID na hex String
  String uidString = "";
  for (byte i = 0; i < mfrc522.uid.size; i++) {
    if (mfrc522.uid.uidByte[i] < 0x10) uidString += "0";
    uidString += String(mfrc522.uid.uidByte[i], HEX);
  }

  uidString.toLowerCase();   // normalizácia formátu

  // Porovnanie s kartami
  if (uidString == "130492a5") {
    Serial.println("Prístup povolený");
  }
  else if (uidString == "03f7f1aa") {
    Serial.println("Karta zamietnutá");
  }
  else {
    Serial.println("Karta neznáma");
  }

  // Stop crypto
  mfrc522.PICC_HaltA();
  mfrc522.PCD_StopCrypto1();
}
